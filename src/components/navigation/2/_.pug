mixin nav-2(anchors, hook)
    nav(class=hook ? "nav-2 " + hook :  "nav-2", role="navigation")

        ul
            for anchor in anchors

                li
                    a(href=anchor.href)= anchor.name

                        svg(role="img" title="Follow us on Twitter")

                            use(xlink:href="/assets/images/_sprites/symbols.svg#footer-2-twitter")
